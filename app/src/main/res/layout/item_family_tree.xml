<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <View
            android:id="@+id/treeIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_gradient"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŒ³"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/treeIcon"
            app:layout_constraintEnd_toEndOf="@+id/treeIcon"
            app:layout_constraintStart_toStartOf="@+id/treeIcon"
            app:layout_constraintTop_toTopOf="@+id/treeIcon" />
        <TextView
            android:id="@+id/treeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Famille Dupont"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/selectedIndicator"
            app:layout_constraintStart_toEndOf="@+id/treeIcon"
            app:layout_constraintTop_toTopOf="@+id/treeIcon" />
        <TextView
            android:id="@+id/treeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="family_dupont"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/treeName"
            app:layout_constraintStart_toStartOf="@+id/treeName"
            app:layout_constraintTop_toBottomOf="@+id/treeName" />
        <ImageView
            android:id="@+id/selectedIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/purple_500" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
